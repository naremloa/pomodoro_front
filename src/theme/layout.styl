.container
  display flex
  width 100vw
  height 100vh
  background-repeat no-repeat
  background-position center
  .sidebar
    width 80px
    height 100vh
    background-color #E8E8E8
    display flex
    flex-direction column
    justify-content center
    &__button
      width 80px
      height 80px
      &.activity
        background-color #fff
      &.list
        background-image url('../assets/icon-list.svg')
        background-repeat no-repeat
        background-position center
      &.analysis
        background-image url('../assets/icon-analysis.svg')
        background-repeat no-repeat
        background-position center
  .content
    flex 1
    display flex
    flex-direction column
    .header
      height 80px
      display flex
      flex-direction row-reverse
      line-height 80px
      div
        margin-right 1.5rem
        color #ffffff80
    .main
      flex 1
      display flex
      flex-direction column
      padding 0 6.25vw
      .interf
        height calc((100vh - 90px) / 2)
        width 100%
        display flex
        .countdown
          width 50%
          margin-top 40px
          // font-size 13.89vw
          font-size changeSizeByScreen(200)
          .num
            line-height changeSizeByScreen(250)
            text-align center
          .button-group
            display flex
            justify-content center
            line-height 65px
            align-items center
            div
              width 50px
              height 50px
              border 2px solid #E8E8E8
              border-radius 1000px
              &.operate-btn
                width 65px
                height 65px
                margin 0 15px
                background-color #E8E8E8
                background-image url('../assets/icon-play--orange.svg')
                background-repeat no-repeat
                background-position center
            .bell-btn
              background-image url('../assets/icon-bell.svg')
              background-repeat no-repeat
              background-position center
            .cancel-btn
              background-image url('../assets/icon-cancel.svg')
              background-repeat no-repeat
              background-position center
        .todolist
          font-family 'Noto Sans TC', sans-serif;
          width 50%
          margin 80px 0 0 80px
          display flex
          flex-direction column
          .todoitem
            display flex
            align-items center
            margin-bottom 30px
            &:first-of-type
              line-height 47px
              font-size 2rem
              .todoitem-pre
                width 40px
                height 40px
            .todoitem-pre
              width 24px
              height 24px
              margin-right 15px
              border 2px solid #E8E8E8
              border-radius 1000px
            .moon-group
              display flex
              .moon
                height 8px
                width 8px
                margin-right 8px
                background-color #fff3
                position relative
                border-radius 100px
                overflow hidden
                .shader
                  height 8px
                  width 8px
                  position absolute
                  background-color #DFE2B6
                  border-radius 100px
                  top 0px
                  left -8px
      .footer
        flex 1
        height calc((100vh - 90px) / 2)
        width 100%
        display flex
        flex-direction column-reverse
        div
          width 100%
        img
          height 100%
          width 100%